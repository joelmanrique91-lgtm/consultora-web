---
const { pathname } = Astro.url;
const isActive = (href) =>
  href === "/" ? pathname === "/" : pathname.startsWith(href);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Consultora</title>
  </head>

  <body>
    <header>
      <nav>
        <a class={`nav__link${isActive("/") ? " is-active" : ""}`} href="/"
          >Home</a
        > |
        <a
          class={`nav__link${isActive("/servicios") ? " is-active" : ""}`}
          href="/servicios"
          >Servicios</a
        > |
        <a class={`nav__link${isActive("/sobre") ? " is-active" : ""}`} href="/sobre"
          >Sobre</a
        > |
        <a class={`nav__link${isActive("/casos") ? " is-active" : ""}`} href="/casos"
          >Casos</a
        > |
        <a
          class={`nav__link${isActive("/contacto") ? " is-active" : ""}`}
          href="/contacto"
          >Contacto</a
        >
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>© Consultora — Todos los derechos reservados</p>
    </footer>
  </body>
</html>
<style>
  :root {
    --max-width: 900px;
    --color-text: #222;
    --color-muted: #666;
    --color-accent: #0b5ed7;
    --bg-light: #f7f7f7;
  }

  body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, sans-serif;
    color: var(--color-text);
    background: white;
    line-height: 1.6;
  }

  header {
    background: var(--bg-light);
    border-bottom: 1px solid #ddd;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    gap: 1rem;
  }

  .nav__link {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    padding: 0.35rem 0.7rem;
    border-radius: 999px;
    transition: color 0.2s ease, background-color 0.2s ease;
  }

  .nav__link:hover {
    color: var(--color-accent);
  }

  .nav__link.is-active {
    color: var(--color-accent);
    background-color: rgba(11, 94, 215, 0.12);
  }

  main {
    max-width: var(--max-width);
    margin: 2rem auto;
    padding: 0 1rem;
  }

  h1 {
    font-size: 2.2rem;
    margin-bottom: 1rem;
  }

  h2 {
    margin-top: 2rem;
    font-size: 1.4rem;
  }

  section {
    margin-top: 2rem;
  }

  footer {
    margin-top: 4rem;
    padding: 2rem 1rem;
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-muted);
    border-top: 1px solid #ddd;
    background: var(--bg-light);
  }
</style>
